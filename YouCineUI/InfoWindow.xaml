<Window x:Class="YouCineUI.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouCineUI"
        mc:Ignorable="d"
        Title="Info" MinHeight="100" Height="400" MinWidth="610" Width="610">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TextBox IsReadOnly="True" HorizontalContentAlignment="Center" TextWrapping="Wrap" x:Name="txt" />
        </ScrollViewer>
        <TextBlock FontSize="14" HorizontalAlignment="Center" Margin="0,7" Grid.Row="1" Text="© 2018 Kevin Senoner und Simon Planinscheck"/>
    </Grid>
</Window>
